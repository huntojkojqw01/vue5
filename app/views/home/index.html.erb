<div id="root">
	<button @click="remove">Remove top name</button>
	<ul>
		<li v-for="name in names" v-text="name"></li>
	</ul>
	<input type="text">
	<button @click="add">Add name</button>
</div>
<script src="https://unpkg.com/vue@2.1.3/dist/vue.js"></script>
<script>	
	var app=new Vue({
		el: "#root",
		data: {
			names: ['Hung','Han','Anh','Em']
		},
		methods: {
			remove: function(){
				this.names.shift();
			},
			add: function(){
				var name=document.querySelector('input');
				this.names.push(name.value);
				name.value='';				
			}
		}
	});
</script>