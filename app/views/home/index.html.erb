<style>
	.color-red{
		color:red;
	}
	.color-blue{
		color:blue;
	}
	.is-loading{
		background: green;
	}
</style>
<div id="root">
	<h1 :class="className">Hello World</h1>
	<button @click="remove" 
		:title="title" 
		:class="{'is-loading': isLoading}">
		Remove top name
	</button>
	<ul>
		<li v-for="name in names" v-text="name"></li>
	</ul>
	<input type="text" v-model="new_name">
	<button @click="add">Add name</button>
</div>
<script src="https://unpkg.com/vue@2.1.3/dist/vue.js"></script>
<script>	
	var app=new Vue({
		el: "#root",
		data: {
			className: 'color-red',
			isLoading: true,
			title: 'Click to pop',
			new_name: '',
			names: ['Hung','Han','Anh','Em']
		},
		methods: {
			remove: function(){
				this.names.shift();
				this.isLoading= !this.isLoading;
			},
			add(){				
				this.names.push(this.new_name);
				this.new_name='';				
			}
		}
	});
</script>